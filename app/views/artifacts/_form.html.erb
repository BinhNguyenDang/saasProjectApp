<div class="row">
  <div class= "col-md-6">
    <%= form_with(model: [project, artifact], url: project_artifacts_path(project)) do |form| %>
      <% if artifact.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

          <ul>
            <% artifact.errors.full_messages.each do |error_message| %>
              <li><%= error_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group mt-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control'%>
      </div>
      
      <div class="form-group mt-3">
        <%= form.label :upload, value: 'File to upload' %>
        <%= form.file_field :upload, class: 'form-control'%>
      </div>

      <%= form.hidden_field :project_id%>
      <div class="form-group mt-3">
        <%= form.submit 'Save Artifacts', class: 'btn btn-primary' %>
      </div>
     
    <% end %>
  </div>
</div>